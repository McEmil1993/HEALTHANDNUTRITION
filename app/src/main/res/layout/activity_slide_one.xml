<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Slide_One">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"

        android:background="@drawable/b1"

        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/hp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:text="Welcome"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#4E4C4C"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginBottom="80dp"
                android:text="Hi there!, Welcome to health and nutrition app. Have you done blood pressure test?
If done, this application is help you to normalize your blood pressure."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4E4C4C"
                android:onClick="OpenSecondActivity"
                android:text="Skip"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>